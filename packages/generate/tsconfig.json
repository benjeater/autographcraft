{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": [
    "./**/*.spec.*",
    "./**/*.data.*",
    "./**/*.test.*",
    "./**/__mocks__/*",
    "./**/__tests__/*"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "moduleResolution": "bundler",
    "paths": {
      "@autographcraft/*": ["../*/src/app"]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ]
}
