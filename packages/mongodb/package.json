{
  "name": "@autographcraft/mongodb",
  "version": "1.2.0",
  "description": "The MongoDB resolver plugin for AutoGraphCraft",
  "main": "dist/app.js",
  "types": "dist/app",
  "type": "module",
  "files": [
    "README.md",
    "README-*.md",
    "dist/**/*.*"
  ],
  "scripts": {
    "clean": "rm -rf dist/*",
    "compile": "tsc -p tsconfig.json && tsc-alias",
    "test": "jest",
    "testW": "jest --watch",
    "bump": "npm version prerelease --no-git-tag-version",
    "bumpPatch": "npm version patch",
    "prepack": "npm run compile && jest",
    "build": "npm run compile",
    "start": "npm run compile && dotenvx run --quiet -- node dist/app.js",
    "startHot": "npm run compile && dotenvx run --quiet -- nodemon -q dist/app.js",
    "startVerbose": "npm run compile && dotenvx run -- nodemon dist/app.js,",
    "lint": "eslint"
  },
  "author": "Ben Jeater <benjeater+autographcraft@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/benjeater/autographcraft",
  "dependencies": {
    "graphql": "^15.5.0",
    "mongoose": "^8.8.3",
    "@autographcraft/core": "^1.1.3"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.22.0",
    "@eslint/js": "^8.57.1",
    "@jest/globals": "^29.7.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3",
    "typescript-eslint": "^7.18.0",
    "lodash": "^4.17.21"
  }
}
